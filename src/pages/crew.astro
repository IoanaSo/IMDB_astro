---
import { supabase } from '../lib/spClient'

// Obtener todos los registros de la tabla "crew1"
const { data: crewList, error } = await supabase
  .from('crew1')
  .select('*')
  .limit(10)

if (error) {
  console.error('Error al obtener los datos de crew1:', error.message)
}
